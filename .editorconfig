root = true


# General (for all files):
#   * utf-8 character encoding
#   * unix-style newlines
#   * newline ending for every file
#   * no trailing whitespace
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true


# JavaScript: 4 space indentation
[*.js]
indent_style = space
indent_size = 4


# JSON: 2 space indentation
[*.json]
indent_style = space
indent_size = 2


# Shell: tab indentation
[*.sh]
indent_style = tab
